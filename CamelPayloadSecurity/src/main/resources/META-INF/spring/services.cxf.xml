<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:cxf="http://camel.apache.org/schema/cxf"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf-2.9.0.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

	<cxf:cxfEndpoint id="userDataEndpoint" address="/userdata"
		serviceClass="com.trivadis.camel.security.services.UserDataService">
	</cxf:cxfEndpoint>
	
	<cxf:cxfEndpoint id="categoryEndpoint" address="/category"
		serviceClass="com.trivadis.camel.security.services.CategoryService">
	</cxf:cxfEndpoint>

</beans>
